<div class="tile" onclick="toAuction('{{_id}}')">
    <img src="{{productImg}}">
    <p class="productName"> {{productName}}</p>

    <div class="bidPrice">
        <span class="highestbidIcon"> </span>
        <p>{{bidPrice}}</p>
    </div>

    <div class="watchers">
        <span class="watchersIcon" alt="mata"> </span>
        <p>{{watchers}}</p>
    </div>

    <div class="expiry">
        <span class="expiryIcon" alt="expiry"> </span>
        <p>{{expiryDate}}</p>
    </div>

</div>