<div class="create_container">
    
    <p> Create an Auction </p>
     
    <div class="create_description">        
        {{!-- <input type="text" id="productDescription" placeholder="Description" maxlength="150"> --}}
        <textarea id="productDescription" placeholder="Description" rows="10" maxlength="400"></textarea>

        <div class="status">
         
            <div class="icons">
                <span class="deliveryIcon"> </span>
                <span class="contactIcon"> </span>
                <span class="highestbidIcon"> </span>
                <span class="incrementIcon"> </span>
                <span class="expirydateIcon"> </span>
                <span class="expiryIcon"> </span>
            </div>

            <div class="values">
                <input type="text" id="delivery" placeholder="Delivery">
                <input type="number" id="contactNum" placeholder="Contact No.">
                <input type="number" id="startingBid" placeholder="Starting Bid" min="1">
                <input type="number" id="increments" placeholder="Increments">
                <input type="date" id="expiryDate" placeholder="Expiry Date">
                <input type="time" id="expiryTime" placeholder="Expiry Time">
            </div>
            
        </div>
    </div>

    <input type="text" id="productName" placeholder="Product Name">

    <div class="create_image">
        <img id="imgPreview" src="/images/icons/productFiller.png"> 
        <input type="file" name="file" id="file" accept="image/*">
    </div>


    {{!-- <div class="create_controls">
        <input type="number" id="increments" placeholder="Increments">
    </div> --}}

    <p class="errorMsg" id="errorMsg"> </p>
    
    <button onclick="createAuction()">Create Auction</button>
    
</div>


